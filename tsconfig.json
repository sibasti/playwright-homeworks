{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,

    "baseUrl": "./src",
    "paths": {
      "config/*": ["config/*"],
      "data/*": ["data/*"],
      "ui/*": ["ui/*"]
    }
  },

  "include": [
    "src",
    "tests",
    "playwright.config.ts"
  ]
}
