{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "api/*": ["api/*"],
      "config/*": ["config/*"],
      "data/*": ["data/*"],
      "utils/*": ["utils/*"],
      "ui/*": ["ui/*"]
    },

    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleDetection": "force",

    "module": "NodeNext",
    "types": ["node"],

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",

    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },

  "include": ["src", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
